<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="viewModel"
        type="com.ground0.ablychat.viewmodel.LoginActivityViewModel"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/primary"
      android:gravity="center"
      android:orientation="vertical"
      >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_step2"
        app:cardBackgroundColor="@color/cardview_light_background"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/view_margin_step2"
          android:layout_marginLeft="@dimen/view_margin_step2"
          android:layout_marginRight="@dimen/view_margin_step2"
          android:layout_marginTop="@dimen/view_margin_step6"
          android:orientation="vertical"
          >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_step1"
            app:error="@{viewModel.userNameError}"
            >
          <android.support.design.widget.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_name"
              android:imeOptions="actionNext"
              android:inputType="text"
              android:maxLines="1"
              app:binding="@{viewModel.userName}"
              />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_step1"
            >
          <android.support.design.widget.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/first_name"
              android:imeOptions="actionNext"
              android:inputType="text"
              android:maxLines="1"
              android:text="@={viewModel.user.firstName}"
              />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_step1"
            >
          <android.support.design.widget.TextInputEditText
              android:id="@+id/a_login_last_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/last_name"
              android:imeActionId="@+id/action_done"
              android:imeOptions="actionDone"
              android:inputType="text"
              android:maxLines="1"
              android:text="@={viewModel.user.lastName}"
              />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_margin_step2"
            android:onClick='@{viewModel::signIn}'
            android:text="@string/sign_in"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            />
      </LinearLayout>
    </android.support.v7.widget.CardView>
  </LinearLayout>
</layout>